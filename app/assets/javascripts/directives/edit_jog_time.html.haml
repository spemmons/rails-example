%form.form-horizontal
  %fieldset
    .form-group
      %label.col-lg-1.text-nowrap Date
      .col-lg-2
        .input-group.input-group-sm
          %input.form-control(uib-datepicker-popup ng-model='fields.date' is-open='displayDate' ng-model-options='{allowInvalid: false, timezone: "UTC"}' placeholder='Select date')
          %span.input-group-btn
            %button.btn.btn-default(ng-click='displayDate = true')
              %i.glyphicon.glyphicon-calendar
      %label.col-lg-1 Duration
      .col-lg-1
        .input-group.input-group-sm
          %input.form-control(type='number' ng-model='fields.hours' min='0' placeholder='HH')
      .col-lg-1
        .input-group.input-group-sm
          %input.form-control(type='number' ng-model='fields.minutes' min='0' placeholder='MM')
      %label.col-lg-1 Distance
      %input.col-lg-1(type='text' ng-model='fields.distance')
      .col-lg-1
        %button.btn.btn-sm.btn-primary(ng-click='submitFields()') {{ fields.id ? 'Update' : 'Add' }}
      .col-lg-1
        %button.btn.btn-sm.btn-danger(ng-if='fields.id' ng-click='onDelete()') Delete
